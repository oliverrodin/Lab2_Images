
@model Images



<div class="row text">
    <div class="mb-3 col-md-8 offset-2">
        <h1>Add new Image</h1>
    </div>
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="ImageUrl" class="form-control" placeholder="@Html.DisplayNameFor(model => model.ImageUrl)" />
                        <label asp-for="ImageUrl"></label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    
                    <div>
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a asp-action="Index" class="btn btn-outline-primary">Back to list</a>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="form-group text-center">
                    <img class="border-info" width="100%" id="BookPicturePreview" />
                </div>
            </div>




        </div>
    </div>

</div>



@section Scripts{
<script>

    $(document).ready(function () {
        var output = document.getElementById('BookPicturePreview');
        output.src = $("#ImageUrl").val();
    })

    $("#ImageUrl").on("change", function() {
        var output = document.getElementById('BookPicturePreview');
        output.src = $(this).val();
    })
</script>
}